@model LearningManagementSystem.Models.Level
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEditLevel", "Level", FormMethod.Post))
{
    @Html.HiddenFor(model => model.ID)
    <div class="form-group">
        @Html.LabelFor(model => model.Name, new { @class = "control-label" })
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        @*@Html.ValidationMessageFor(model => model.FirstName)*@
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Principle, new { @class = "control-label" })
        @Html.EditorFor(model => model.Principle, new { htmlAttributes = new { @class = "form-control" } })
        @*@Html.ValidationMessageFor(model => model.LastName)*@

    </div>
   

    <div class="form-group">
        <input type="submit" value="Запиши" class="btn btn-primary" />
        <input type="reset" value="Изчисти" class="btn" />

    </div>

}







